<script>
    document.addEventListener("DOMContentLoaded", () => {
        const activityDropdown = document.getElementById("activity");
        const screenshotCheckbox = document.getElementById("screenshot_required");
        const durationInputContainer = document.createElement("div");
        const form = document.querySelector("form");

        // Create the duration input field
        durationInputContainer.classList.add("mb-3");
        durationInputContainer.innerHTML = `
            <label for="duration" class="form-label">Duration (in minutes)</label>
            <input type="number" id="duration" name="duration" class="form-control" disabled>
        `;
        // Append it to the form after the activity field
        activityDropdown.parentElement.parentElement.appendChild(durationInputContainer);

        const durationInput = document.getElementById("duration");

        // Initially disable the checkbox and duration input
        screenshotCheckbox.disabled = true;
        durationInput.disabled = true;

        activityDropdown.addEventListener("change", () => {
            const selectedActivity = activityDropdown.value;

            if (selectedActivity === "watch") {
                // Enable duration input and make it required
                durationInput.disabled = false;
                durationInput.required = true;

                // Disable the screenshot checkbox for "watch" and uncheck it
                screenshotCheckbox.checked = false;
                screenshotCheckbox.disabled = true;
            } else if (selectedActivity === "follow") {
                // Enable the screenshot checkbox and disable duration input
                screenshotCheckbox.disabled = false;
                durationInput.disabled = true;
                durationInput.required = false;
                durationInput.value = ""; // Clear any previous input
            } else {
                // Default case, disable both checkbox and duration input
                screenshotCheckbox.checked = false;
                screenshotCheckbox.disabled = true;
                durationInput.disabled = true;
                durationInput.required = false;
                durationInput.value = ""; // Clear any previous input
            }
        });

        form.addEventListener("submit", (e) => {
            let hasError = false;

            // Clear previous errors
            document.querySelectorAll(".error-message").forEach((el) => el.remove());

            // Validation for Duration
            if (activityDropdown.value === "watch") {
                if (!durationInput.value.trim() || Number(durationInput.value) <= 0) {
                    hasError = true;
                    const error = document.createElement("small");
                    error.className = "text-danger error-message";
                    error.textContent = "Duration must be greater than 0.";
                    durationInput.parentElement.appendChild(error);
                }
            }

            if (hasError) {
                e.preventDefault(); // Stop form submission
            }
        });
    });
</script>
